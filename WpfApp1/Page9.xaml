<Window x:Class="WpfApp1.Page9"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="הגדרת טבלאות לספר תנועה" Height="480" Width="550"
        FlowDirection="RightToLeft"
        Background="#F0F0F0"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Radio Button Options -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <DockPanel LastChildFill="True" Margin="0,0,0,10">
                <Ellipse Fill="#0078D7" Width="12" Height="12" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="טבלאות קבועות:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Width="300" Height="25"/>
            </DockPanel>
            <DockPanel LastChildFill="True" Margin="0,5,0,0">
                <Ellipse Fill="Transparent" Stroke="Black" StrokeThickness="1" Width="12" Height="12" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="התפלגות לפי דרך כפי פרמטרים:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            </DockPanel>
        </StackPanel>

        <!-- Main Form Area -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Background="White" Margin="-8,0,-9,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Header Section -->
                <TextBlock Text="הגדרות" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                           FontWeight="Bold" Margin="0,0,0,15"/>

                <!-- Date Range Selection -->
                <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="תאריך התחלה:" Grid.Column="4" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="3" Width="80" Margin="5,0,10,0">
                        <ComboBoxItem Content="מאי" IsSelected="True"/>
                    </ComboBox>
                    <TextBox Grid.Column="2" Text="2025" Width="60" Margin="5,0,5,0" HorizontalContentAlignment="Center"/>

                    <TextBlock Text="תאריך סיום:" Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ComboBox Width="80" Margin="5,0,5,0">
                            <ComboBoxItem Content="מאי" IsSelected="True"/>
                        </ComboBox>
                        <TextBox Text="2025" Width="60" Margin="5,0,0,0" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Time Range Selection -->
                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="שעה התחלה:" Grid.Column="4" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="3" Text="__:__" Width="60" Margin="5,0,10,0" HorizontalContentAlignment="Center"/>

                    <TextBlock Text="שעה סיום:" Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <TextBox Grid.Column="0" Text="__:__" Width="60" Margin="5,0,5,0" HorizontalContentAlignment="Center"/>
                </Grid>

                <!-- Directions Section -->
                <TextBlock Text="כיוונים:" Grid.Row="3" Grid.Column="1" VerticalAlignment="Top" Margin="0,5,0,15"/>
                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <StackPanel>
                        <CheckBox Content="צפונה" Margin="0,5,0,5"/>
                        <CheckBox Content="דרום" Margin="0,5,0,5"/>
                        <CheckBox Content="מזרחה" Margin="0,5,0,5"/>
                        <CheckBox Content="מערבה" Margin="0,5,0,5"/>
                    </StackPanel>
                    <ComboBox Width="200" Margin="20,0,0,0" VerticalAlignment="Top">
                        <ComboBoxItem Content="" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>

                <!-- Additional Fields -->
                <TextBlock Text="יחידות:" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,15"/>
                <ComboBox Grid.Row="4" Grid.Column="0" Width="200" HorizontalAlignment="Right" Margin="0,0,0,15">
                    <ComboBoxItem Content="" IsSelected="True"/>
                </ComboBox>

                <TextBlock Text="יד חזק:" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="5" Grid.Column="0" Width="200" HorizontalAlignment="Right">
                    <ComboBoxItem Content="" IsSelected="True"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Bottom Buttons -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Height="25"/>
            <Button Content="צור טבלה" Grid.Column="1" Width="100" Height="30" Margin="10,0,0,0"/>
            <Button Content="סגור" Grid.Column="2" Width="100" Height="30" Margin="10,0,0,0"/>
        </Grid>
    </Grid>
</Window>
