<Window x:Class="WpfApp1.VehicleTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="טבלת רכב" Height="450" Width="350"
        FlowDirection="RightToLeft"
        Background="#ECF0F1"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Vehicle Group Selection -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,15">
            <TextBlock Text="קבוצת רכב:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Height="25" Width="150">
                <ComboBoxItem Content="" IsSelected="True"/>
            </ComboBox>
        </DockPanel>

        <!-- Main Content Area -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Margin="0,0,0,15">
            <Grid>
                <!-- This is where the vehicle data would be displayed -->
                <!-- For example, a DataGrid or ListView could be placed here -->
            </Grid>
        </Border>

        <!-- Bottom Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="בטל" Grid.Column="1" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="סגור" Grid.Column="2" Width="100" Height="30"/>
        </Grid>
    </Grid>
</Window>
