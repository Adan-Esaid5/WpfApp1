<Window x:Class="WpfApp1.ManualCounterSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="הגדרת מונה ידני" Height="600" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft"
        Background="#F0F0F0">

    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="DirectionTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="BorderBrush" Value="#AAAAAA"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- זרועות -->
        <Grid Grid.Row="0" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="זרוע צפון" Style="{StaticResource DirectionTextStyle}"/>
            <CheckBox Grid.Column="1" Content="קיים מידע" Style="{StaticResource CheckBoxStyle}"/>
            <TextBox Grid.Column="2" Style="{StaticResource TextBoxStyle}" IsReadOnly="True"/>
            <Button Grid.Column="3" Content="בחר קובץ..." Style="{StaticResource ButtonStyle}" Click="BrowseFile_Click"/>
            <Button Grid.Column="4" Content="הוסף נתונים" Style="{StaticResource ButtonStyle}" Click="AddData_Click"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="זרוע דרום" Style="{StaticResource DirectionTextStyle}"/>
            <CheckBox Grid.Column="1" Content="קיים מידע" Style="{StaticResource CheckBoxStyle}"/>
            <TextBox Grid.Column="2" Style="{StaticResource TextBoxStyle}" IsReadOnly="True"/>
            <Button Grid.Column="3" Content="בחר קובץ..." Style="{StaticResource ButtonStyle}" Click="BrowseFile_Click"/>
            <Button Grid.Column="4" Content="הוסף נתונים" Style="{StaticResource ButtonStyle}" Click="AddData_Click"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="זרוע מזרח" Style="{StaticResource DirectionTextStyle}"/>
            <CheckBox Grid.Column="1" Content="קיים מידע" Style="{StaticResource CheckBoxStyle}"/>
            <TextBox Grid.Column="2" Style="{StaticResource TextBoxStyle}" IsReadOnly="True"/>
            <Button Grid.Column="3" Content="בחר קובץ..." Style="{StaticResource ButtonStyle}" Click="BrowseFile_Click"/>
            <Button Grid.Column="4" Content="הוסף נתונים" Style="{StaticResource ButtonStyle}" Click="AddData_Click"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="זרוע מערב" Style="{StaticResource DirectionTextStyle}"/>
            <CheckBox Grid.Column="1" Content="קיים מידע" Style="{StaticResource CheckBoxStyle}"/>
            <TextBox Grid.Column="2" Style="{StaticResource TextBoxStyle}" IsReadOnly="True"/>
            <Button Grid.Column="3" Content="בחר קובץ..." Style="{StaticResource ButtonStyle}" Click="BrowseFile_Click"/>
            <Button Grid.Column="4" Content="הוסף נתונים" Style="{StaticResource ButtonStyle}" Click="AddData_Click"/>
        </Grid>

        <Grid Grid.Row="4" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="זרוע צפון-מערב" Style="{StaticResource DirectionTextStyle}"/>
            <CheckBox Grid.Column="1" Content="קיים מידע" Style="{StaticResource CheckBoxStyle}"/>
            <TextBox Grid.Column="2" Style="{StaticResource TextBoxStyle}" IsReadOnly="True"/>
            <Button Grid.Column="3" Content="בחר קובץ..." Style="{StaticResource ButtonStyle}" Click="BrowseFile_Click"/>
            <Button Grid.Column="4" Content="הוסף נתונים" Style="{StaticResource ButtonStyle}" Click="AddData_Click"/>
        </Grid>

        <Grid Grid.Row="5" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="זרוע צפון-מזרח" Style="{StaticResource DirectionTextStyle}"/>
            <CheckBox Grid.Column="1" Content="קיים מידע" Style="{StaticResource CheckBoxStyle}"/>
            <TextBox Grid.Column="2" Style="{StaticResource TextBoxStyle}" IsReadOnly="True"/>
            <Button Grid.Column="3" Content="בחר קובץ..." Style="{StaticResource ButtonStyle}" Click="BrowseFile_Click"/>
            <Button Grid.Column="4" Content="הוסף נתונים" Style="{StaticResource ButtonStyle}" Click="AddData_Click"/>
        </Grid>

        <Grid Grid.Row="6" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="זרוע דרום-מערב" Style="{StaticResource DirectionTextStyle}"/>
            <CheckBox Grid.Column="1" Content="קיים מידע" Style="{StaticResource CheckBoxStyle}"/>
            <TextBox Grid.Column="2" Style="{StaticResource TextBoxStyle}" IsReadOnly="True"/>
            <Button Grid.Column="3" Content="בחר קובץ..." Style="{StaticResource ButtonStyle}" Click="BrowseFile_Click"/>
            <Button Grid.Column="4" Content="הוסף נתונים" Style="{StaticResource ButtonStyle}" Click="AddData_Click"/>
        </Grid>

        <Grid Grid.Row="7" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="זרוע דרום-מזרח" Style="{StaticResource DirectionTextStyle}"/>
            <CheckBox Grid.Column="1" Content="קיים מידע" Style="{StaticResource CheckBoxStyle}"/>
            <TextBox Grid.Column="2" Style="{StaticResource TextBoxStyle}" IsReadOnly="True"/>
            <Button Grid.Column="3" Content="בחר קובץ..." Style="{StaticResource ButtonStyle}" Click="BrowseFile_Click"/>
            <Button Grid.Column="4" Content="הוסף נתונים" Style="{StaticResource ButtonStyle}" Click="AddData_Click"/>
        </Grid>

        <Button Grid.Row="9"
                Content="סגור"
                Style="{StaticResource CloseButtonStyle}"
                HorizontalAlignment="Center"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
